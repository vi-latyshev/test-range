{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "ES2019",
        "declaration": true,
        "alwaysStrict": true,
        "sourceMap": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "preserveConstEnums": true,
        "composite": true,
        "preserveSymlinks": true,
        "outDir": "lib",
        "rootDir": "src",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "typeRoots": [
            "./node_modules/@types",
            "./typings"
        ]
    },
    "exclude": [
        "**/node_modules/**",
        "lib",
    ]
}
